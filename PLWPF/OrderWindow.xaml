    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Left" Height="120" VerticalAlignment="Top" Width="792" Margin="0,299,0,0" Grid.ColumnSpan="2"/>
        <Grid HorizontalAlignment="Left" Height="122" VerticalAlignment="Top" Width="792" Grid.ColumnSpan="2" Margin="0,148,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="599*"/>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="160*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        <Image Source="road-trip-compressor.png" Stretch="Fill" Grid.ColumnSpan="2" Opacity="0.5"/>
        <Label Content="? מה אתה רוצה לפעול"  Grid.Row="0" FontSize="40" FontFamily="Lucida Calligraphy" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Margin="186,77,146,278" Grid.ColumnSpan="2" Width="460"/>
        <Button Content="הוספת הזמנה" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Add_Click" Width="312" Margin="47,172,0,0" Height="70" FontSize="30"/>
        <Button Content="עדכון הזמנה" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Update_Click" Width="312" Grid.Column="1" Margin="47,172,0,0" Height="70" FontSize="30"/>
        <Label Content="הזמנות      " HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="315,10,0,0" Width="175" Height="90" FontSize="70" FontFamily="Aharoni"/>
